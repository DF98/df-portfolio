---
import { getCollection, type CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Card from "../../components/Card.astro";

const allProjects: CollectionEntry<"projects">[] =
    await getCollection("projects");
---

<BaseLayout title="Projects">
    <h1 class="text-4xl text-center font-bold mt-6">Check Out My Projects</h1>
    <h3 class="text-2xl text-center mt-8">
        Find out what I've been up to lately.<br />There's not much at the
        moment, but there are more projects coming soon so stay tuned!
    </h3>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mt-10">
        {
            allProjects.map((project) => (
                <Card
                    title={project.data.title}
                    author={project.data.author}
                    description={project.data.description}
                    pubDate={project.data.pubDate}
                    image={project.data.image}
                    slug={project.slug}
                />
            ))
        }
    </div>
</BaseLayout>
